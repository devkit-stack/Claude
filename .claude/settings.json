{
  "permissions": {
    "allow": [
      "Bash(bun *)",
      "Bash(bunx *)",
      "Bash(biome *)",
      "Bash(npx prisma *)",
      "Bash(git status*)",
      "Bash(git log*)",
      "Bash(git diff*)",
      "Bash(git branch*)",
      "Bash(git show*)",
      "Bash(git stash*)",
      "Bash(docker *)",
      "Bash(lefthook *)"
    ],
    "deny": [
      "Read(.env*)",
      "Read(**/.env*)",
      "Bash(rm -rf *)",
      "Bash(git push --force *)",
      "Bash(git push --force-with-lease *)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/biome-format.sh"
          }
        ]
      }
    ]
  }
}
